<div class="panel panel-wide">
  <div class="panel-heading">
    <h3 class="panel-title">Checkout</h3>
  </div>
  <div class="panel-body">
    <table>
      <tr>
        <th>Name</th>
        <th>Time In</th>
        <th>Check Out</th>
      </tr>
      <tbody>
        <% @visits.each do |visit| %>
          <tr>
            <td><%= visit.visitor.name %></td>
            <td><%= visit.created_at.to_formatted_s(:short) %></td>
            <td><%= link_to 'Check Out', {controller: 'visits', action: 'checkout', id: visit.id }, method: :post %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
